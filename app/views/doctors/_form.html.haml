%form.form-horizonal
  = form_for [@doctor] do |f|
    .form-group
      = f.label :doctor_name, class: "col-sm-2 control-label"
      .col-sm-10
        = f.text_field :doctor_name, class: "form-control"
    .form-group
      = f.label :specialty, class: "col-sm-2 control-label"
      .col-sm-10
        = f.text_field :specialty, class: "form-control"
    .form-group
      .col-sm-offset-4.col-sm-8
        = f.submit "Register Doctor", class: "btn btn-primary"
%br/
= form_for @nurse, url: create_nurse_doctor_path(@doctor) do |f|
  = f.label :content
  = f.text_area :content
  %br/
  = f.submit
  = link_to "Back to Doctor List", doctors_path