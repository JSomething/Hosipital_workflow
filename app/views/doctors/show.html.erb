<h1><%= @doctor.doctor_name %> <small><%= @doctor.specialty %></small></h1>
<%= link_to "Edit Doctor", edit_doctor_path(@doctor), class: 'btn btn-info' %>
<%= link_to "Delete Doctor", doctor_path(@doctor), method: :delete, class: 'btn btn-danger' %>
<br>
<br>
<h3>Patient List</h3>
<%= link_to "Add Patient", new_patient_path(@doctor), class: 'btn btn-primary' %>
<br>
<br>
<% @patients.each do |patient| %>
<ul class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= patient.first_name %></dd>
  <dt>Description</dt>
  <dd><%= patient.description %></dd>
  <dt><%= link_to 'Patient Profile', patient_path(@doctor, patient) %>
  <dd></dd>
</ul>
<% end %>
<br>
<br>
<%= link_to "Back to Doctor List", doctors_path %>