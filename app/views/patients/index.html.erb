<% provide(:pagetitle, 'Patients') %>
<ul>
<% @patients.each do |patient| %>
  <li>
    <%= patient.first_name %>
    <%= patient.last_name %>
    <%= patient.dob %>
    <%= patient.description %>
    <%= patient.gender %>
    <%= patient.blood_type %>
    <br>
    <%= link_to "Edit", edit_patient_path(patient) %>
    |
    <%= link_to "Delete", patient_path(patient), method: :delete %>
  </li>
<% end %>
</ul>